# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV=development

# ============================================
# DATABASE
# ============================================
# Local MongoDB (development)
MONGODB_URI=mongodb://localhost:27017/world_of_books

# MongoDB Atlas (production)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/world_of_books

MONGODB_DB_NAME=world_of_books

# ============================================
# API CONFIGURATION
# ============================================
API_PORT=3001
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# ============================================
# FRONTEND
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME=World of Books Explorer
NEXT_PUBLIC_APP_DESCRIPTION=Discover books from World of Books

# ============================================
# WEB SCRAPING
# ============================================
# Crawlee/Playwright settings
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000
PLAYWRIGHT_LAUNCH_ARGS=--no-sandbox
PLAYWRIGHT_SCREENSHOT_ON_ERROR=false

# Scraping behavior
SCRAPING_TIMEOUT=30000
SCRAPING_MAX_RETRIES=3
SCRAPING_RATE_LIMIT_MS=1000
SCRAPING_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# ============================================
# CACHING
# ============================================
CACHE_TTL_SECONDS=86400
CACHE_ENABLED=true

# ============================================
# QUEUE CONFIGURATION (Bull/Redis)
# ============================================
# For development, can use in-memory queue
REDIS_URL=redis://localhost:6379
QUEUE_ENABLED=true
QUEUE_CONCURRENCY=3

# ============================================
# SECURITY
# ============================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
HELMET_ENABLED=true

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug
LOG_FORMAT=json

# ============================================
# MONITORING (Optional)
# ============================================
# SENTRY_DSN=
# DATADOG_API_KEY=
# NEW_RELIC_LICENSE_KEY=

# ============================================
# FEATURES
# ============================================
FEATURE_ANALYTICS=true
FEATURE_USER_HISTORY=true
FEATURE_SEARCH=true
FEATURE_RECOMMENDATIONS=false

# ============================================
# WORLD OF BOOKS CONFIGURATION
# ============================================
WOB_BASE_URL=https://www.worldofbooks.com
WOB_REQUEST_TIMEOUT=30000
WOB_MAX_PAGES_TO_SCRAPE=10
